<div id="<%= dom_id room %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Websocket ip:</strong>
    <%= room.websocket_ip %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Websocket port:</strong>
    <%= room.websocket_port %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Facility:</strong>
    <%= room.facility_id %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Building:</strong>
    <%= room.building %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Room type:</strong>
    <%= room.room_type %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this room", room, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to 'Edit this room', edit_room_path(room), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
