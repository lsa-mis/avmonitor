<div>
  <% if current_source(room, device) == "not available" %>
    Not Available
  <% elsif current_source(room, device) == "not selected" %>
    <%= select_tag "source", options_from_collection_for_select(list_of_sources(room), "id", "value"), 
      prompt: "Select source ...", class: "block rounded-none rounded-l-md sm:text-sm border-gray-300" %>
  <% else %>
    <%= select_tag "source", options_from_collection_for_select(list_of_sources(room), "id", "value", "#{current_source(room, device)}"), 
     prompt: "Select source ...", class: "block rounded-none rounded-l-md sm:text-sm border-gray-300" %>
  <% end %>
</div>