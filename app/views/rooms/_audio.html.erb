<div class="px-4 sm:px-6 lg:px-8" data-controller="sendtosocket">
  <div class="sm:flex sm:items-center">
    <div class="sm:flex-auto">
      <h1 class="text-xl font-semibold text-gray-900 bg-gray-300 p-2">Audio / Microphones</h1>
    </div>
  </div>
  <div class="mt-4 pl-4 pr-2 py-2 ring-1 ring-gray-300 sm:-mx-6 md:mx-0 md:rounded-lg">
    <div>
      Ceiling Mic - <%= ceiling_mic(room) %>
    </div>
    <div>
      WL Mic - <%= wl_mic(room) %>
    </div>
    <div class="relative pt-1 ">
      <div>
        <label for="wl_mic_volume">Mic Volume - <%= wl_mic_volume(room) %></label>
        <input type="range" list="tickmarks-mic"
          class="form-range w-full h-6 p-0 focus:outline-none focus:ring-0 focus:shadow-none"
          min="0" max="100" value=<%= wl_mic_volume(room) %> id="wl_mic_volume" 
          data-sendtosocket-target="wl_mic_volume" data-action="change->sendtosocket#changeMicVolume"/>
          <datalist id="tickmarks-mic" class="text-sm">
            <option value="0">0</option>
            <option value="10"></option>
            <option value="20"></option>
            <option value="30"></option>
            <option value="40"></option>
            <option value="50">50</option>
            <option value="60"></option>
            <option value="70"></option>
            <option value="80"></option>
            <option value="90"></option>
            <option value="100">100</option>
          </datalist>
      </div>
    </div>
    <div class="relative pt-1">
      <div>
        <label for="source_vol">Source Volume - <%= source_volume(room) %></label>
        <input type="range" list="tickmarks-source"
          class="form-range w-full h-6 p-0 focus:outline-none focus:ring-0 focus:shadow-none"
          min="0" max="100" value=<%= source_volume(room) %> id="source_vol" 
          data-sendtosocket-target="source_vol" data-action="change->sendtosocket#changeSourceVolume"/>
          <datalist id="tickmarks-source" class="text-sm">
            <option value="0">0</option>
            <option value="10"></option>
            <option value="20"></option>
            <option value="30"></option>
            <option value="40"></option>
            <option value="50">50</option>
            <option value="60"></option>
            <option value="70"></option>
            <option value="80"></option>
            <option value="90"></option>
            <option value="100">100</option>
          </datalist>
      </div>
    </div>
  </div>
  <input type="hidden" id="room_id" name="room_id" value="<%= room.id %>" data-sendtosocket-target="room">
</div>
