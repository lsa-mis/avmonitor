<div class="rounded-lg shadow-lg px-auto pl-2">
  <%= turbo_frame_tag "room" do  %>
    <div class="flex-col w-full px-2">
      <div class="mx-auto">
        <div class="grid grid-cols-2">
          <div>
            <h1 class="text-3xl mb-2">
              <%= @room.display_name %>
              <% if room_need_attention?(@room) %>
                <span class="text-red-500">Needs attention</span>
              <% end %>
            </h1>
            <p class="my-5">
              <%= @room.building %>
            </p>
            <p class="my-5">
              <%= @room.room_type %>
            </p>
            <p class="my-5">
            <%= @room.websocket_ip %>
            </p>
            <p class="my-5">
              <%= @room.websocket_port %>
            </p>
            <% if policy(Room).refresh_room? %>
              <%= button_to 'Reload Page', "", method: :get, class: "m-2 px-1 rounded-md shadow-sm bg-blue-umblue text-sm text-gray-100 text-center hover:underline" %>
              <span class="ml-2 text-xs text-gray-700">(reload page)</span>
              <hr class="mb-2">
            <% end %>

            <% if policy(Room).send_to_room? %>
              <%= button_to 'Open Socket', refresh_path, method: :get, class: "m-2 px-1 rounded-md shadow-sm bg-blue-umblue text-sm text-gray-100 text-center hover:underline" %>
              <span class="ml-2 text-xs text-gray-700">(if responds - socket starts streaming data - check status)</span>
              <hr class="mb-2">
            <% end %>

            <% if policy(Room).close_socket? %>
              <%= button_to 'Close Socket', close_path, method: :get, class: "m-2 px-1 rounded-md shadow-sm bg-blue-umblue text-sm text-gray-100 text-center hover:underline" %>
              <span class="ml-2 text-xs text-gray-700">(close socket before changing anything - check status)</span>
              <hr class="mb-2">
            <% end %>
          </div>
          <div>
            <div class="mt-4 text-blue-600 hover: underline">
              <div>
                <%= link_to "Lecture Capture Dashboard", "https://leccap.engin.umich.edu/leccap/dashboard", data:{"turbo-frame": "_top"}, "target": "_blank" %>
              </div>
              <div>
                <%= link_to "Room Schedule", "https://csprod.dsc.umich.edu/services/facilitycalendar?facilityid=#{@room.facility_id }", data:{"turbo-frame": "_top"}, "target": "_blank" %>
              </div>
            </div>
            <div>
              WebSocket status:
              <% if @socket_status.present? %>
                <%= show_status(@socket_status.status) %>
              <% end %>
            </div>
          </div>
        </div>
        <div>
          <% if room_has_device_current_states?(@room) %>
            <%= render @room %>
          <% end %>
        </div>
      <div>
        <% if current_user.role == "admin" %>
         <%= link_to 'Edit this room', edit_room_path(@room), class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium", data: { "turbo-frame": "_top" } %>
        <% end %>
        <%= link_to 'Back to rooms', rooms_path, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium", data: { "turbo-frame": "_top" } %>
      </div>
    </div>
  <% end %>
</div>

<div class="container p-2 rounded-lg shadow-lg text-xl mb-20 bg-gray-50">
  <div class="mb-20">Notes:
    <% if ["admin", "technician"].include?(session[:user_role]) %>
      <%= render partial: "notes/form", locals: { note: Note.new, noteable: @room } %>
    <% end %>
    <%= turbo_stream_from @room, :notes %>
    <%= tag.div id: "#{dom_id(@room)}_notes" do %>
      <%= render @room.notes %> 
    <% end %>
  </div>
</div>